@model PreInfoTrans.Models.Carrier

@{
    ViewData["Title"] = "Create";
}

<h3>Лицо, осуществляющее перевозку</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unp" class="control-label"></label>
                <input asp-for="Unp" class="form-control" />
                <span asp-validation-for="Unp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <div>
                    <select asp-for="Country" class="form-control form-select" aria-describedby="CountryHelpInline">
                        @if (ViewData["Countries"] != null)
                        { 
                            foreach (Countries c in ViewData["Countries"] as List<Countries>)
                            {
                                <option value="@c.CountryName">@c.CountryName</option>
                            }
                        }
                    </select>
                </div>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- Добавим это поле, чтобы сохранить EpiId -->
                <input type="hidden" asp-for="EpiId" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-controller="Epis" asp-action="Edit" asp-route-id="@Model.EpiId">Отмена</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
